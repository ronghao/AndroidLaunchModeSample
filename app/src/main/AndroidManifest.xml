            android:taskAffinity="com.haohaohu.task3" />
        <activity
            android:name=".activity.SingleInstance1Activity"
            android:label="@string/title_activity_test1" />
        <activity
            android:name=".activity.SingleInstance2Activity"
            android:label="@string/title_activity_test1" />

        <activity
            android:name=".activity.Reg1Activity"
            android:label="Reg1Activity" />
