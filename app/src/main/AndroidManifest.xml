            android:name=".activity.SingleTop1Activity"
            android:label="@string/title_activity_test1" />
        <activity
            android:name=".activity.SingleTop2Activity"
            android:label="@string/title_activity_test1" />
        <activity
            android:name=".activity.SingleTop3Activity"
            android:label="@string/title_activity_test1" />
        <activity
            android:name=".activity.SingleTask1Activity"
            android:label="@string/title_activity_test1"
            android:taskAffinity="com.haohaohu.task1" />
        <activity
            android:name=".activity.SingleTask2Activity"
            android:label="@string/title_activity_test1"
            android:taskAffinity="com.haohaohu.task2" />
        <activity
            android:name=".activity.SingleTask3Activity"
            android:label="@string/title_activity_test1"
            android:taskAffinity="com.haohaohu.task3" />
        <activity
            android:name=".activity.SingleTask1WithTaskAffinityActivity"
            android:label="@string/title_activity_test1"
            android:launchMode="singleTask"
            android:taskAffinity="com.haohaohu.task1" />
        <activity
            android:name=".activity.SingleTask2WithTaskAffinityActivity"
            android:label="@string/title_activity_test1"
            android:launchMode="singleTask"
